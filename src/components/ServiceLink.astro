---
interface Props {
  icon?: string;
  title: string;
  href: string;
}

const { icon, title, href } = Astro.props;
---

<a
  href={href}
  class="flex items-center gap-4 p-4 rounded-lg hover:bg-gray-50 transition-colors group"
>
  <div
    class="w-12 h-12 rounded-lg bg-[#f5f9f0] flex items-center justify-center text-[#6b9d28] group-hover:bg-[#6b9d28] group-hover:text-white transition-colors"
  >
    {icon}
  </div>
  <div class="flex-1">
    <h3
      class="text-[#333] font-medium group-hover:text-[#6b9d28] transition-colors"
    >
      {title}
    </h3>
  </div>
</a>
