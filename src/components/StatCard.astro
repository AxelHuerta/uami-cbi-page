---
interface Props {
  icon?: string;
  number: string;
  description: string;
}

const { icon, number, description } = Astro.props;
---

<div class="flex flex-col items-center text-center">
  <div
    class="w-20 h-20 rounded-full border-2 border-[#6b9d28] flex items-center justify-center bg-white mb-4 group-hover:bg-[#6b9d28]/10 transition-colors"
  >
    <div class="text-[#6b9d28]">{icon}</div>
  </div>
  <div class="text-3xl font-bold mb-2">{number}</div>
  <p class="text-sm text-gray-600 max-w-[150px]">{description}</p>
</div>
