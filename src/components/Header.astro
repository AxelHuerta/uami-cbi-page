---
import {
  Calendar,
  Facebook,
  Instagram,
  Mail,
  Twitter,
  User,
  Youtube,
} from "@lucide/astro";
---

<header class="border-b">
  <div class="container mx-auto py-4">
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      {/* Logo */}
      <div class="flex items-center gap-2">
        <img
          src="https://www.uam.mx/identidad/emblemaylema/logomediano.png"
          alt="Logo UAM"
          width="100"
        />
        <div class="flex flex-col">
          <span class="text-xs md:text-sm font-bold text-[#4d4d4d]">
            UNIVERSIDAD AUTÓNOMA METROPOLITANA
          </span>
          <span class="text-xs font-semibold text-[#4d4d4d]"
            >Casa abierta al tiempo</span
          >
          <span class="text-xs font-semibold text-[#6b9d28]"
            >Unidad Iztapalapa</span
          >
        </div>
        <div class="ml-2 border-l pl-2">
          <span class="text-xs md:text-sm font-bold text-[#000000]">CBI</span>
          <div class="flex flex-col">
            <span class="text-xs font-semibold text-[#4d4d4d]"
              >Ciencias Básicas</span
            >
            <span class="text-xs font-semibold text-[#4d4d4d]"
              >e Ingeniería</span
            >
          </div>
        </div>
      </div>

      <!-- Search && social media -->
      <div class="flex flex-col items-end gap-2 w-full md:w-auto">
        <nav>
          <ul class="flex gap-4">
            <li>
              <a
                href="#"
                style="color: #6b9d28"
                class="font-semibold flex items-center"
              >
                <Calendar size={16} class="mr-1" />
                Calendario escolar</a
              >
            </li>
            <li>
              <a
                href="#"
                style="color: #6b9d28"
                class="font-semibold flex items-center"
              >
                <User size={16} class="mr-1" />
                Titlani</a
              >
            </li>
            <li>
              <a
                href="#"
                style="color: #6b9d28"
                class="font-semibold flex items-center"
              >
                <Mail size={16} class="mr-1" />
                Xanum</a
              >
            </li>
          </ul>
        </nav>
        <div class="flex items-center gap-2 w-full md:w-auto">
          <div class="flex items-center gap-3">
            <Facebook />
            <Twitter />
            <Instagram />
            <Youtube />
          </div>
          <div class="relative w-full md:w-auto">
            <input
              type="text"
              placeholder="Buscar..."
              class="pl-2 pr-8 py-1 text-sm border rounded-md w-full md:w-[200px]"
            />
            <div
              class="absolute right-2 top-1/2 transform -translate-y-1/2 h-4 w-4 text-gray-400"
            >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
