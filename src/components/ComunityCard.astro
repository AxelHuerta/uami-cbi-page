---
interface Props {
  image: string;
  title: string;
  icon?: string;
}

const { image, title, icon } = Astro.props;
---

<a href="#" class="group block">
  <div class="relative h-64 overflow-hidden">
    <img
      src={image || "/placeholder.svg"}
      alt={title}
      class="object-cover transform group-hover:scale-105 transition-transform duration-700"
    />
    <div
      class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/50 to-black/30 group-hover:opacity-90 transition-opacity"
    >
    </div>

    <div
      class="absolute inset-0 flex flex-col items-center justify-center text-white p-6"
    >
      <div
        class="bg-white/10 rounded-full p-4 mb-4 group-hover:bg-[#6b9d28]/20 transition-colors"
      >
        {icon}
      </div>
      <h3 class="text-xl font-medium text-center">{title}</h3>
    </div>
  </div>
</a>
