---

<Layout>
  <nav class="flex justify-between items-center p-4 bg-white">
    <img
      src="https://cbi.izt.uam.mx/images/sitio/UAM50-CBI.png#joomlaImage://local-images/sitio/UAM50-CBI.png?width=1144&height=324"
      alt="Logo UAM 50 años"
      width="150"
    />
    <span class="font-bold">Menú</span>
  </nav>

  <section
    class="grid grid-rows-3 grid-flow-col gap-4 mx-auto my-8 p-8 max-w-6xl"
  >
    <div class="row-span-3 bg-white p-2 m-1 rounded-md">
      <h2>Calendario</h2>
      <img
        src="https://cbi.izt.uam.mx/images/sitio/calendario/calendario_24-25.webp"
        alt="Calendario UAM"
        width="300"
      />
    </div>
    <div class="row-span-1 col-span-2 bg-white p-4 m-1 rounded-md">Titlani</div>
    <div class="row-span-1 col-span-2 bg-white p-4 m-1 rounded-md">Xanum</div>
  </section>
</Layout>
